<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF6F2"
    android:padding="16dp">

    <!-- Search bar -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="What are you looking for?"
        android:padding="12dp"
        android:backgroundTint="#FFE3E0"
        android:drawableEnd="@android:drawable/ic_search_category_default"
        android:drawablePadding="8dp"
        android:background="@drawable/border"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:inputType="text" />

    <!-- GridLayout for category buttons -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

    <!-- Bottom navigation (example placeholder) -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:padding="5dp"
        android:rowCount="2">

        <!-- Breakfast Button -->
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="180dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:layout_marginTop="80dp"
            android:background="#FFE3E0"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:padding="16dp"
                android:src="@drawable/service_image_3" />

            <TextView
                android:layout_width="65dp"
                android:layout_height="60dp"
                android:layout_marginTop="0dp"
                android:text="Hair"
                android:textColor="#000000"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Lunch Button -->
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="180dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:layout_marginTop="80dp"
            android:background="#FFE3E0"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:padding="16dp"
                android:src="@drawable/service_image_4" />

            <TextView
                android:layout_width="65dp"
                android:layout_height="60dp"
                android:layout_marginTop="0dp"
                android:text="Nails"
                android:textColor="#000000"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Dinner Button -->
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="180dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:layout_marginTop="80dp"
            android:background="#FFE3E0"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:padding="16dp"
                android:src="@drawable/service_image_5" />

            <TextView
                android:layout_width="65dp"
                android:layout_height="60dp"
                android:layout_marginTop="0dp"
                android:text="Eye-Lash Extensions"
                android:textColor="#000000"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Coffee Button -->
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="180dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:layout_marginTop="80dp"
            android:background="#FFE3E0"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:padding="25dp"
                android:src="@drawable/service_image_6" />

            <TextView
                android:layout_width="65dp"
                android:layout_height="60dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="Makeup"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Bar Button -->
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="180dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:layout_marginTop="80dp"
            android:background="#FFE3E0"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:padding="16dp"
                android:src="@drawable/service_image_7" />

            <TextView
                android:layout_width="65dp"
                android:layout_height="60dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="Facials"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Street Food Button -->
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="180dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:layout_marginTop="80dp"
            android:background="#FFE3E0"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:padding="16dp"
                android:src="@drawable/service_image_8" />

            <TextView
                android:layout_width="65dp"
                android:layout_height="55dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="IV Drips"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
    </GridLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFE3E0"
        android:background="@drawable/border"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_marginTop="16dp">

        <!-- Placeholder for bottom navigation icons -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Home"
            android:src="@drawable/ic_home" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="32dp"
            android:contentDescription="Saved"
            android:src="@drawable/ic_saved" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="32dp"
            android:contentDescription="Saved2"
            android:src="@drawable/ic_saved2" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="32dp"
            android:contentDescription="Profile"
            android:src="@drawable/ic_profile" />
    </LinearLayout>
</LinearLayout>
</ScrollView>
